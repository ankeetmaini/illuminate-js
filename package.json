{
  "name": "illuminate-js",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "bootstrap": "npm install && cd illuminate && npm link && npm install && cd ../react && npm link illuminate-js && npm install",
    "bootstrap:yarn": "yarn install && cd illuminate && yarn install && cd .. && cd react && yarn install",
    "test": "npm run lint && jest",
    "lint": "eslint ./illuminate/src ./react/src ./illuminate/tests ./react/tests"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^18.0.0",
    "babel-plugin-transform-class-properties": "^6.22.0",
    "babel-preset-env": "^1.1.8",
    "eslint": "^3.14.0",
    "eslint-config-vkbansal": "^4.3.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-react": "^6.9.0",
    "eslint-plugin-standard": "^2.0.1",
    "jest": "^18.1.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathDirs": [
      "<rootDir>/illuminate/tests",
      "<rootDir>/react/tests"
    ]
  }
}
