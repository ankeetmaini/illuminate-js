{
  "name": "react-illuminate",
  "version": "1.1.0",
  "description": "Syntax Highlighting for React",
  "main": "lib/index.js",
  "scripts": {
    "compile:es5": "BABEL_ENV=es5 ../node_modules/.bin/babel ./src -d ./lib",
    "compile:es6": "BABEL_ENV=es6 ../node_modules/.bin/babel ./src -d ./es6",
    "compile": "npm run compile:es5 && npm run compile:es6",
    "prepublish": "npm run compile"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vkbansal/illuminate-js.git"
  },
  "author": "Vivek Kumar Bansal <contact@vkbansal.me>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vkbansal/illuminate-js/issues"
  },
  "peerDependencies": {
    "react": "^0.14.0 || ^15.0.0",
    "illuminate-js": "^1.0.0"
  },
  "devDependencies": {
    "react": "^15.4.1"
  },
  "babel": {
    "presets": [
      "react"
    ],
    "env": {
      "es6": {
        "presets": [
          "es2016"
        ],
        "plugins": [
          "transform-class-properties"
        ]
      },
      "es5": {
        "presets": [
          "es2015"
        ],
        "plugins": [
          "transform-class-properties"
        ]
      }
    }
  }
}
