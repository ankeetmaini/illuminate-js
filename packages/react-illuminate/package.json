{
  "name": "react-illuminate",
  "version": "2.0.0-alpha.0",
  "description": "Syntax Highlighting for React",
  "main": "./lib/Illuminate.js",
  "typings": "./lib/Illuminate.d.ts",
  "files": [
    "esm",
    "lib"
  ],
  "scripts": {
    "test": "jest --no-cache",
    "coverage": "jest --no-cache --coverage",
    "build": "npm run build:cjs && npm run build:esm",
    "build:esm": "rimraf ./esm && tsc --target es6 --module es6 --outDir ./esm",
    "build:cjs": "rimraf ./lib && tsc --target es6 --module commonjs --outDir ./lib",
    "prepublishOnly": "npm test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vkbansal/illuminate-js.git"
  },
  "author": "Vivek Kumar Bansal <contact@vkbansal.me>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vkbansal/illuminate-js/issues"
  },
  "peerDependencies": {
    "illuminate-js": "^1.0.0-alpha.0",
    "react": "^16.0.0"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.6",
    "@types/jest": "^21.1.8",
    "@types/react": "^16.0.25",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "enzyme-to-json": "^3.2.2",
    "jest": "^22.0.1",
    "jsdom": "^11.5.1",
    "react": "^16.2.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.0.0",
    "typescript": "^2.6.1"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/jest.setup.js"
    ],
    "testMatch": [
      "**/?(*.)(spec|test).ts?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/__tests__/**"
    ],
    "mapCoverage": true
  }
}
